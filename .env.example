# PostgreSQL Database Configuration
# Copy this file to .env and update the values as needed

# Database user - used for authentication
# Default: pii_admin
POSTGRES_USER=pii_admin

# Database password - CHANGE THIS IN PRODUCTION!
# Default: changeme_in_production
# Use a strong password for production environments
POSTGRES_PASSWORD=changeme_in_production

# Database name - the name of the database to create
# Default: pii_test_data
POSTGRES_DB=pii_test_data

# Database host - hostname or IP address where PostgreSQL is running
# Default: localhost (use 'postgres' when connecting from another container)
POSTGRES_HOST=localhost

# Database port - the port PostgreSQL listens on
# Default: 5432 (standard PostgreSQL port)
POSTGRES_PORT=5432
